<!-- FitnessTracker/Views/FitnessProgress.xaml -->
<UserControl x:Class="FitnessTracker.Views.FitnessProgress"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FitnessTracker.Views"
      mc:Ignorable="d"
      MinHeight="350" MinWidth="300">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Enter Fitness Progress" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Progress Entry Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <!-- Progress Type Selection -->
            <StackPanel>
                <TextBlock Text="Progress Type:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox Name="ProgressTypeComboBox" 
                          ItemsSource="{Binding ProgressTypes}"
                          SelectedItem="{Binding SelectedProgressType}"
                          Height="30"/>
            </StackPanel>

            <!-- Running Progress Controls -->
            <StackPanel Name="RunningProgressPanel" 
                        Visibility="{Binding IsRunningProgress, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,10,0,0">
                <TextBlock Text="Distance Unit:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox Name="DistanceUnitComboBox"
                          ItemsSource="{Binding DistanceUnits}"
                          SelectedItem="{Binding SelectedDistanceUnit}"
                          Height="30"/>
            </StackPanel>

            <!-- Water Progress Controls -->
            <StackPanel Name="WaterProgressPanel"
                        Visibility="{Binding IsWaterProgress, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,10,0,0">
                <TextBlock Text="Water Unit:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox Name="WaterUnitComboBox"
                          ItemsSource="{Binding WaterUnits}"
                          SelectedItem="{Binding SelectedWaterUnit}"
                          Height="30"/>
            </StackPanel>

            <!-- Progress Value Input -->
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Progress Value:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="ProgressValueTextBox"
                         Text="{Binding ProgressValue, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Validation Error -->
            <TextBlock Text="{Binding ValidationError}" 
                       Foreground="Red" 
                       Margin="0,10,0,0"
                       Visibility="{Binding ValidationError, Converter={StaticResource BooleanToVisibilityConverter}}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Name="OkButton" 
                    Content="Save" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsEnabled="{Binding IsValid}"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    Background="#f44336"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>
