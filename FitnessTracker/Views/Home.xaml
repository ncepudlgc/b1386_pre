<!-- FitnessTracker/Views/Home.xaml -->
<UserControl x:Class="FitnessTracker.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FitnessTracker.Views"
             mc:Ignorable="d"
             Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="15">
            <Button Name="SetGoalButton" 
                    Content="Set Goal" 
                    Width="200" 
                    Height="40" 
                    HorizontalAlignment="Center"
                    Command="{Binding SetGoalCommand}"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Name="EnterProgressButton" 
                    Content="Enter Progress" 
                    Width="200" 
                    Height="40" 
                    HorizontalAlignment="Center"
                    Command="{Binding EnterProgressCommand}"
                    FontSize="14"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>